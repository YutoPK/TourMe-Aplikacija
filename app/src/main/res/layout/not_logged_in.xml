<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_not_logged"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_logged"
        android:layout_below="@id/pic"
        android:layout_centerHorizontal="true"
        android:text="Niste prijavljeni. Prijavite se da biste nastavili."
        android:textSize="18dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/goToLoginIfDidnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/not_logged"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="Prijavite se"
        android:textSize="14dp"
        android:textColor="@color/white" />

</RelativeLayout>