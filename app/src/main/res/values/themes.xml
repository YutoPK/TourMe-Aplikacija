<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TourMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#30e86e</item>
        <item name="colorPrimaryVariant">#cccccc</item>
        <item name="colorOnPrimary">#d9f2e0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#30e86e</item>
        <item name="colorSecondaryVariant">#f2f2f2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#333333</item>
        <item name="colorOnBackground">#212121</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!-- Color when SELECTED in DRAWER -->
        <item name="colorPrimary">#1a1a1a</item>
        <item name="colorSurface">#52e081</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="Theme.TourMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TourMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TourMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>